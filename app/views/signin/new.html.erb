<% if flash[:alert]=="Sign in Failed" %>
<div class="alert alert-warning mt-4">
    <%= flash[:alert] %>
</div>
 <% end %>
<div class="container">
  <h1>SignIn</h1>
  <%= form_with model: @user, url: sign_in_path do |form| %>
   <div class="mb-3">
      <%= form.label :email %>
      <%= form.text_field :email, class: "form-control", placeholder: "Enter the email.." %>
    </div>

    <div class="mb-3">
      <%= form.label :password %>
      <%= form.password_field :password, class: "form-control", placeholder: "Enter the password.." %>
    </div>

    <div class="mb-3">
      <%= form.submit "Submit", class: "btn btn-success" %>
    </div>
  <% end %>
</div>



