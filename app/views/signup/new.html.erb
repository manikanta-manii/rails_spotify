
<% if flash[:alert]=="Sign Up Failed" %>
<div class="alert alert-danger mt-4">
    <%= flash[:alert] %>
</div>
 <% end %>
<div class="container">
  <h1>SignUp</h1>
  <%= form_with model: @user, url: sign_up_path do |form| %>
   <div class="mb-3">
      <%= form.label :name %>
      <%= form.text_field :name, class: "form-control", placeholder: "Enter the name.." %>
    </div>
    <div class="mb-3">
      <%= form.label :email %>
      <%= form.text_field :email, class: "form-control", placeholder: "Enter the email.." %>
    </div>
    <div class="mb-3">
      <%= form.label :password %>
      <%= form.password_field :password, class: "form-control", placeholder: "Enter the password.." %>
    </div>
    <div class="mb-3">
      <%= form.label :password_confirmation %>
      <%= form.password_field :password_confirmation, class: "form-control", placeholder: "Confirm the password.." %>
    </div>
    <div class="mb-3">
      <%= form.submit "Submit", class: "btn btn-success" %>
    </div>
  <% end %>
</div>



